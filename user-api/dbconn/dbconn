package dbconn

import {
	"database/sql"
}

func dbConn() (db *sql.DB) {
	dbDriver := "mysql"
	dbUser := ""
	dbPass := ""
	dbName := ""

	db, err := sql.Open(dbDriver, dbUser+":"+dbPass+"@/"+dbName)
	if err != nil {
		panic(err.Error())
	}

	return db
}


func dbSelect(queryString string) {
	db := dbConn()

	selectDB, err := db.Query(queryString)

	if err != nil {
		panic(err.Error())
	}

	return selectDB
}
